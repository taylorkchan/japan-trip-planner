{
  "name": "japan-trip-planner-backend",
  "version": "1.0.0",
  "description": "Backend API for Japan Trip Planner with dual Supabase/Custom support",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npx prisma generate",
    "start": "node dist/index.js",
    "postinstall": "npx prisma generate",
    "deploy": "npx prisma db push && npm start",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "date-fns": "^2.30.0",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.8.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "tsx": "^4.4.0",
    "typescript": "^5.2.2",
    "supabase": "^1.120.0"
  }
}