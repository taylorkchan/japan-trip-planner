{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "japan-trip-planner-backend",
      "source": {
        "repo": "taylorkchan/japan-trip-planner",
        "rootDirectory": "/backend"
      },
      "build": {
        "buildCommand": "npm ci && npm run build",
        "watchPatterns": ["**/*.ts", "**/*.js", "**/*.json"]
      },
      "deploy": {
        "startCommand": "npm start",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": "${{ RAILWAY_PUBLIC_PORT }}",
        "DATABASE_URL": "${{ Postgres.DATABASE_URL }}"
      }
    },
    {
      "name": "japan-trip-planner-frontend",
      "source": {
        "repo": "taylorkchan/japan-trip-planner",
        "rootDirectory": "/frontend"
      },
      "build": {
        "buildCommand": "npm ci && npm run build",
        "watchPatterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
      },
      "deploy": {
        "startCommand": "npx serve -s dist -p $PORT",
        "staticPublicPath": "/dist"
      },
      "variables": {
        "VITE_API_BASE_URL": "${{ japan-trip-planner-backend.RAILWAY_PUBLIC_URL }}"
      }
    }
  ],
  "plugins": [
    {
      "name": "PostgreSQL",
      "plan": "hobby"
    }
  ]
}